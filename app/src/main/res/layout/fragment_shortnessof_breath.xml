<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/symptombg"
    tools:context=".fragments.ShortnessofBreathFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fear of Heights (Acrophobia)"
            android:layout_gravity="center"
            android:textColor="#166035"
            android:textSize="28sp"
            android:fontFamily="@font/abhayalibrebold"
            android:layout_marginTop="10dp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Understand Your Fear and Learn to Overcome "
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:fontFamily="@font/abhayalibraregular"
            android:layout_marginTop="10dp"
            />

        <ImageView
            android:layout_width="210dp"
            android:layout_height="226dp"
            android:layout_gravity="center"
            android:src="@drawable/lungs"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="25dp"
            android:background="@drawable/shortbg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:fontFamily="@font/inter_18pt_bold"
                android:textColor="#00695C"
                android:text="Shortness of Breath"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/inter_18pt_regular"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:text="1. Rapid or irregular breathing when exposed to heights."/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:fontFamily="@font/inter_18pt_regular"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:text="2. Feels like you can't catch your breath properly."/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:fontFamily="@font/inter_18pt_regular"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:text="3. Leads to discomfort and increased panic levels."/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>