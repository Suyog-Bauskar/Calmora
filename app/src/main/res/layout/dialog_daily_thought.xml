<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialogLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:elevation="8dp">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daily Thought"
        android:textColor="#0A8146"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/imageViewThought"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:src="@drawable/calm_nature"
        android:contentDescription="Thought illustration"/>

    <TextView
        android:id="@+id/textViewMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stay positive and keep pushing forward!"
        android:textColor="#444444"
        android:textSize="16sp"
        android:textStyle="italic"
        android:fontFamily="@font/inter_18pt_bold"
        android:gravity="center"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:minWidth="240dp"/>

    <Button
        android:id="@+id/buttonClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close"
        android:layout_marginTop="12dp"
        android:backgroundTint="#2E7D32"
        android:textColor="#FFFFFF"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"/>
</LinearLayout>
